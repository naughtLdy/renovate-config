{
  "name": "@naughtldy/renovate-config",
  "version": "0.2.1",
  "repository": "git@github.com:naughtLdy/renovate-config.git",
  "homepage": "https://github.com/naughtLdy/renovate-config/blob/master/README.md",
  "author": "naughtLdy <naughtLdy@users.noreply.github.com>",
  "license": "MIT",
  "renovate-config": {
    "default": {
      "extends": [
        ":autodetectPinVersions",
        ":combinePatchMinorReleases",
        ":ignoreModulesAndTests",
        ":ignoreUnstable",
        ":label(Renovate)",
        ":pinAllExceptPeerDependencies",
        ":prImmediately",
        ":prNotPending",
        ":semanticPrefixFixDepsChoreOthers",
        ":separateMajorReleases",
        ":timezone(Asia/Tokyo)",
        ":updateNotScheduled",
        "group:monorepos",
        "group:recommended",
        "helpers:disableTypesNodeMajor"
      ],
      "packageRules": [
        {
          "depTypeList": [
            "dependencies"
          ],
          "packagePatterns": [
            "*"
          ],
          "updateTypes": [
            "patch"
          ],
          "groupName": "all patch dependencies",
          "paths": [
            "package.json"
          ]
        },
        {
          "depTypeList": [
            "dependencies"
          ],
          "packagePatterns": [
            "*"
          ],
          "updateTypes": [
            "minor"
          ],
          "groupName": "all minor dependencies",
          "paths": [
            "package.json"
          ]
        },
        {
          "depTypeList": [
            "devDependencies"
          ],
          "packagePatterns": [
            "*"
          ],
          "updateTypes": [
            "patch"
          ],
          "groupName": "all patch devDependencies",
          "paths": [
            "package.json"
          ]
        },
        {
          "depTypeList": [
            "devDependencies"
          ],
          "packagePatterns": [
            "*"
          ],
          "updateTypes": [
            "minor"
          ],
          "groupName": "all minor devDependencies",
          "paths": [
            "package.json"
          ]
        },
        {
          "depTypeList": [
            "dependencies"
          ],
          "labels": [
            "Renovate",
            "dependencies"
          ],
          "vulnerabilityAlerts": {
            "labels": [
              "Renovate",
              "dependencies",
              "Security"
            ]
          }
        },
        {
          "depTypeList": [
            "devDependencies"
          ],
          "labels": [
            "Renovate",
            "devDependencies"
          ],
          "vulnerabilityAlerts": {
            "labels": [
              "Renovate",
              "devDependencies",
              "Security"
            ]
          }
        }
      ],
      "branchPrefix": "renovate/",
      "prConcurrentLimit": 10,
      "schedule": "before 1am on Monday"
    },
    "jest": {
      "packageRules": [
        {
          "groupName": "jest sync packages",
          "sourceUrlPrefixes": [
            "https://github.com/facebook/jest"
          ],
          "packageNames": [
            "@types/jest",
            "ts-jest"
          ],
          "commitMessageSuffix": "**Warning: dependencies out of sync**",
          "prBodyNotes": "**ATTENTION:** Jest packages should be the same MAJOR version."
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.(json|md)": [
      "prettier --write"
    ]
  },
  "scripts": {
    "test": "renovate-config-validator"
  },
  "devDependencies": {
    "husky": "4.2.1",
    "lint-staged": "15.2.2",
    "prettier": "2.0.4",
    "renovate": "19.103.0"
  }
}
